<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/grey_active"
        card_view:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/delete" />

                <TextView
                    android:id="@+id/text_dataalert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Are you sure you want to delete the database?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:id="@+id/but_move_data"
                    android:layout_width="match_parent"
                    android:text="Move"
                    android:background="@color/default_inactive"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/light"
                    android:textColor="@color/white"
                    android:layout_height="40dp" />


                <Button
                    android:id="@+id/but_deldata"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/green_active"
                    android:fontFamily="@font/light"
                    android:text="Yes"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/but_canceldata"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/red_active"
                    android:fontFamily="@font/light"
                    android:text="No"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>